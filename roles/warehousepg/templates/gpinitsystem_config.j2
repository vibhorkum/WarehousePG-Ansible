# WarehousePG Cluster Configuration File
# Generated by Ansible

# Name of this WarehousePG cluster
ARRAY_NAME="{{ whpg_cluster_name }}"

# Prefix for segment data directories
SEG_PREFIX={{ whpg_seg_prefix }}

# Base port for primary segments (increments for each segment)
PORT_BASE={{ whpg_segment_port_base }}

# Coordinator (Master) Configuration
COORDINATOR_HOSTNAME={{ inventory_hostname }}
COORDINATOR_DIRECTORY={{ whpg_coordinator_directory }}
COORDINATOR_PORT={{ whpg_coordinator_port }}

# Primary Segment Data Directories
# Each entry represents one primary segment per host
declare -a DATA_DIRECTORY=({{ whpg_primary_directory }})

# Mirror Segment Data Directories (if using mirrors)
# declare -a MIRROR_DATA_DIRECTORY=()

# Trusted Shell
TRUSTED_SHELL={{ whpg_trusted_shell }}

# Check for Greenplum Database documentation inventory
CHECK_GPDOC_INVENTORY=n

# Encoding
ENCODING=UNICODE

# Database Name (optional, default is template1)
# DATABASE_NAME=

# Locale settings (optional)
# LOCALE_SETTINGS=en_US.utf8
