# gpadmin .bashrc additions
# Generated by Ansible for WarehousePG environment

# Source WarehousePG environment
source {{ whpg_gphome }}/greenplum_path.sh

# Set coordinator data directory
export COORDINATOR_DATA_DIRECTORY={{ whpg_coordinator_directory }}/gpseg-1

# Set default database connection parameters
export PGPORT={{ whpg_coordinator_port }}
export PGUSER={{ whpg_default_user }}
export PGDATABASE={{ whpg_default_database }}

{% if ansible_os_family == 'RedHat' %}
# Enable ps command for RHEL/Rocky/Oracle Linux
export LD_PRELOAD=/lib64/libz.so.1 ps
{% endif %}
